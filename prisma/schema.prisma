// This is your Prisma schema file. Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * A person using the NCC Finance app
 */
model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  balances  Balance[] // One-to-many relation - a user can have multiple accounts (checking, savings).
  createdAt DateTime  @default(now())
}

/**
 * A single financial account owned by a user "Checking Account", "Savings Account", "Wallet" etc...
 */

model Balance {
  id           String        @id @default(cuid())
  userId       String
  accountType  String
  amount       Float
  currency     String
  transactions Transaction[] // One-to-many â€” all actions tied to this balance.
  user         User          @relation(fields: [userId], references: [id])
}

/**
 * Any financial activity involving money in/out of an account.
 */
model Transaction {
  id          String   @id @default(cuid())
  balanceId   String
  type        String // "deposit", "withdrawal", "transfer"
  amount      Float
  timestamp   DateTime @default(now())
  description String?
  balance     Balance  @relation(fields: [balanceId], references: [id])
}
